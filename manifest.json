{
    "name" : "Website Blocker",
    "description" : "The easiest way to block a website on a desktop version of Chrome is to use an extension.",
    "version" : "1.0",
    "manifest_version" : 3,
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js" : ["content.js"]
        }
    ],
    "icons" : {
        "16" : "/images/logo.png"
    },
    "action" : {
        "default_popup": "popup.html",
        "default_title": "Website Blocker"
    }
}